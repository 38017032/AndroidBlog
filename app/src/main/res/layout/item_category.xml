<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small_medium"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/padding_medium">

    <com.likebamboo.osa.android.ui.view.DynamicHeightImageView
        android:id="@+id/category_cover_iv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@color/grey_300"/>

    <TextView
        android:id="@+id/category_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:background="@drawable/bg_translucent_gradient"
        android:maxLines="2"
        android:padding="@dimen/padding_medium"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_large"/>

    <TextView
        android:id="@+id/category_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|bottom"
        android:padding="@dimen/padding_small"
        android:singleLine="true"
        android:text="@string/fa_user"
        android:textSize="@dimen/text_small"/>

</android.support.v7.widget.CardView>
