<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/item_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small_medium"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/padding_medium">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/blog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textSize="@dimen/text_large"/>

        <View
            android:id="@+id/blog_divider"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/blog_title_tv"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/grey_400"/>

        <FrameLayout
            android:id="@+id/blog_abstracts_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blog_divider">

            <!-- 简介 -->
            <TextView
                android:id="@+id/blog_abstracts_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:lineSpacingMultiplier="1.2"
                android:padding="@dimen/padding_small_medium"
                android:text="@string/app_name"
                android:textSize="@dimen/text_medium"/>

            <!-- 封面图 -->
            <com.likebamboo.osa.android.ui.view.DynamicHeightImageView
                android:id="@+id/blog_cover_iv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_small_medium"
                android:scaleType="fitXY"/>

        </FrameLayout>

        <!--底部信息栏-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blog_abstracts_content"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small">

            <com.likebamboo.osa.android.ui.view.fa.TextAwesome
                android:id="@+id/blog_tag_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="@dimen/text_medium"/>

            <com.likebamboo.osa.android.ui.view.fa.TextAwesome
                android:id="@+id/blog_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="@dimen/text_medium"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
